{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "typings"],
    "target": "es2019",
    "module": "commonjs",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
